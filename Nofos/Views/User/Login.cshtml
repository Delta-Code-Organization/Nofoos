@{
    ViewBag.Title = "Login - Nofoos.com";
    Layout = "~/Views/shared/MasterPage2.cshtml";
}


<script>
    $(document).ready(function () {
        var options = {
            weekday: "numeric", year: "numeric", month: "numeric",
            day: "numeric", hour: "numeric", minute: "numeric"
        };
        var date = new Date();
        var Day = date.getDate();
        var mounth = date.getMonth() + 1;
        var Year = date.getFullYear();
        var Time = date.toLocaleTimeString("en-US");
        var TimeLength = date.toLocaleTimeString("en-US").length;
        var FullDate = mounth + '/' + Day + '/' + Year + " " + date.toLocaleTimeString("en-US");
        if (Time.indexOf("GMT") != -1) {
            FullDate = mounth + '/' + Day + '/' + Year + " " + date.toLocaleTimeString("en-US").substring(0, TimeLength - 5);
        }
        $.ajax({
            url: '/User/SetTO',
            type: 'post',
            data: { "_LocalTime": FullDate }
        });
    });
    $(document).ready(function () {



        $('#Login').validate({

            rules: {
                LoginEmail: {
                    required: true,
                    minlength: 5
                },

                LoginPassword: {
                    required: true,
                    minlength: 5
                }

            },
            messages: {
                LoginEmail: {
                    required: "please enter your Email",
                    minlength: "5 characters as minimum "
                },
                LoginPassword: {
                    required: "please enter your password",
                    minlength: "5 characters as minimum "
                }
            },
            submitHandler: function (form) { // for demo
                $(function () {
                    var LoginEmail = $('#LoginEmail').val();
                    var LoginPassword = $('#LoginPassword').val();
                    var Rem = "false";
                    if ($('#Remember').is(":checked")) {
                        Rem = "true";
                    }

                    var data = { '_Email': LoginEmail, '_Password': LoginPassword, 'Rem': Rem };
                    $.ajax({
                        url: '/User/LoginUser',
                        type: 'post',
                        data: data,
                        beforeSend: function () {


                            $("#LoginError").fadeOut(0);
                            $("#LoginLoader").css({ "display": "block" });
                            $('#LoginSubmit').attr("disabled", "disabled");
                        },
                        complete: function () {

                            $("#LoginLoader").css({ "display": "none" });
                            $('#LoginSubmit').removeAttr("disabled");
                        },
                        success: function (data) {
                            if (data == 'UserSuspended') {

                                $("#LoginerrorText").html('<p><strong>Message</strong> :Sorry your account is suspended</p>');
                                $("#LoginError").fadeIn(500);

                            }
                            else if (data == 'DoctorSuspended') {

                                $("#LoginerrorText").html('<p><strong>Message</strong> :Sorry your account is suspended</p>');
                                $("#LoginError").fadeIn(500);
                            }

                            else if (data == 'DoctorPending') {
                                $("#LoginerrorText").html('<p><strong>Message</strong> :Sorry your account is pending for approval</p>');
                                $("#LoginError").fadeIn(500);

                            }

                            else if (data == 'Usertrue') {
                                window.location.href = "/User/UserDashboard";

                            }
                            else if (data == 'Doctortrue') {
                                window.location.href = "/Doctor/DoctorDashboard";


                            }
                            else if (data == 'false') {

                                $("#LoginerrorText").html('<p><strong>Message</strong> :Email or Password is incorrect</p>');
                                $("#LoginError").fadeIn(500);

                            }
                            else if (data == 'Null Username') {

                                window.location.href = "/User/Login";

                            }
                            else {
                                window.location.href = data;

                            }


                            scrollTo([0], [0]);


                        },
                        error: function (data) {
                            console.log(data.responseText);
                        }
                    });
                });
            }
        });







    });


</script>

<div class="l-main">
    <div class="l-main-h">
        <div class="l-subsection">
            <div class="l-subsection-h">

                <section id="home" class="l-section">
                    <div class="l-subsection-hh g-html i-cf">





                        <h2 class="highlight"><strong>Login</strong></h2>
                        <a href="/User/Register">Or register a new account now</a>
                        <div class="g-alert type_error with_close" id="LoginError" style="display: none;">
                            <div class="g-alert-close">✕ </div>
                            <div class="g-alert-body" id="LoginerrorText">
                            </div>
                        </div>


                        <div class="w-form contacts_form">
                            <div class="w-form-h contacts_form_form">
                                <form class="g-form" action="#" method="post" id="Login">
                                    <div class="g-form-row" id="loginemail_row">
                                        <div class="g-form-row-label">
                                            <label class="g-form-row-label-h" for="name">Your Email</label>
                                        </div>
                                        <div class="g-form-row-field">
                                            <i class="icon-envelope"></i>
                                            <input type="text" name="LoginEmail" id="LoginEmail">
                                        </div>
                                        <div class="g-form-row-state" id="Lemail_state"></div>
                                    </div>
                                    <div class="g-form-row" id="Lpass_row">
                                        <div class="g-form-row-label">
                                            <label class="g-form-row-label-h" for="email">Password</label>
                                        </div>
                                        <div class="g-form-row-field">
                                            <i class="icon-user"></i>
                                            <input type="password" name="LoginPassword" id="LoginPassword">
                                        </div>
                                        <div class="g-form-row-state" id="Lpass_state"></div>
                                    </div>

                                    <div class="g-form-row">
                                        <div class="g-form-row-label"></div>
                                        <div class="g-form-row-field">
                                            <button class="g-btn type_primary" id="LoginSubmit"><span>Login</span></button>
                                            <img id="LoginLoader" src="~/content/img/loader.gif" style="margin-left: 100px; display: none; margin-top: -40px;">
                                        </div>
                                        <div class="g-form-row-field">
                                            <a href="/User/sendreset">Forgot your password?, Click here.</a>
                                        </div>
                                        <div class="g-form-row-field">
                                            <input id="Remember" type="checkbox" />
                                            <label class="highlight" for="Remember">Remember me</label>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>



                    </div>

                </section>

            </div>
        </div>

    </div>
</div>
