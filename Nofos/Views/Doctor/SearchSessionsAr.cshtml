@using GDAL;



<script type="text/javascript">

    var Counterr = 0;
    $(document).ready(function () {
        var options = {
            weekday: "numeric", year: "numeric", month: "numeric",
            day: "numeric", hour: "numeric", minute: "numeric"
        };
        var date = new Date();
        var Day = date.getDate();
        var mounth = date.getMonth() + 1;
        var Year = date.getFullYear();
        var Time = date.toLocaleTimeString("en-US");
        var TimeLength = date.toLocaleTimeString("en-US").length;
        var FullDate = mounth + '/' + Day + '/' + Year + " " + date.toLocaleTimeString("en-US");
        if (Time.indexOf("GMT") != -1) {
            FullDate = mounth + '/' + Day + '/' + Year + " " + date.toLocaleTimeString("en-US").substring(0, TimeLength - 5);
        }
        $.ajax({
            url: '/User/SetTO',
            type: 'post',
            data: { "_LocalTime": FullDate }
        });
    });
    $(document).ready(function () {
        FilterDoctors();
        if ($(document).width() < 450) {
            $('.w-blog-entry-meta-date').each(function (index,e) {
                $(this).attr('style','position:relative;float:left');
            });
        }
    });

    function convertDate(inputFormat) {
        var d = new Date(inputFormat);
        return [d.getDate(), d.getMonth() + 1, d.getFullYear()].join('/');
    }

    function isEmpty(obj) {
        for (var prop in obj) {
            if (obj.hasOwnProperty(prop))
                return false;
        }

        return true;
    }

    function Getmounthintext(inputFormat) {
        var d = new Date(inputFormat);
        var month = new Array();
        month[0] = "يناير";
        month[1] = "فبراير";
        month[2] = "مارس";
        month[3] = "أبريل";
        month[4] = "مايو";
        month[5] = "يونيو";
        month[6] = "يوليو";
        month[7] = "أغسطس";
        month[8] = "سبتمبر";
        month[9] = "أكتوبر";
        month[10] = "نوفمبر";
        month[11] = "ديسمبر";
        
        var n = month[d.getMonth()];
        return n;
    }
    var Days = new Array();
    Days[0] = "السبت";
    Days[1] = "الاحد";
    Days[2] = "الاثنين";
    Days[3] = "الثلاثاء";
    Days[4] = "الاربعاء";
    Days[5] = "الخميس";
    Days[6] = "الجمعة";
    function Purchase(ID, Counter1) {

        window.location.href = "/Doctor/Purchase/" + ID;

    }

    function GoToProfile(ID) {
        window.open("/Doctor/View/" + ID, "_blank");
        win.focus();
        //window.location.href = "/Doctor/View/" + ID;
    }

    function FilterDoctors() {
        var data;
        var DID = $('#Therapist').val();
        var SP = $('#Speciality').val();
        var Ty = $('#Type').val();
        var Lang = $('#Language').val();
        var CDate = $('#Date').val();
        data = { '_ID': DID, '_SP': SP, "Ty": Ty, 'Lang': Lang, 'CDate': CDate };
        $.ajax({
            url: '/Doctor/GetFilteredDoctors',
            type: 'post',
            data: data,
            beforeSend: function () {
                $('#Loader').css({ 'display': 'block' });
            },
            complete: function () {
                $('#Loader').css({ 'display': 'none' });
            },
            success: function (data) {
                console.log(data);
                $('.w-blog-list').empty();
                if (isEmpty(data) == true) {
                    $('.w-blog-list').append('<div class="g-alert type_info">'
                    + '<div class="g-alert-body" style="text-align:center;width:100%;">'
                        + '<p style="font-family:' + 'GE SS Two Light' + ';"><strong >لم يتم العثور على نتائج</strong></br>من فضلك قم بالبحث مرة أخرى بإستخدام بيانات بحث جديدة</p>'
                    + '</div>'
                + '</div>');
                    return;
                }
                $.each(data, function (Index, Custom) {
                    var SPSS = Custom.Doctors.SP1 + '<br/>' + Custom.Doctors.SP2 + '<br/>' + Custom.Doctors.SP3;
                    var styleColor = "";
                    var styleDisplay = "";
                    if (Custom.AvOrNot == "Not available") {
                        styleColor = "color:red;";
                        styleDisplay = "display:none;";
                        Custom.AvOrNot = "غير متاحة";
                    }
                    else {
                        styleColor = "color:green;";
                        Custom.AvOrNot = "متاحة";
                    }
                    var SType = "";
                    if (Custom.Type == 1) {
                        SType = "Individual";
                    }
                    else {
                        SType = "Group";
                    }
                    var milli = Custom.Date.replace(/\/Date\((-?\d+)\)\//, '$1');
                    var SessionDate = new Date(parseInt(milli));
                    SessionDate = new Date(SessionDate.toISOString());
                    var mounthOnly = Getmounthintext(SessionDate);
                    var dayOnly = SessionDate.getUTCDate();
                    var DayName = Days[SessionDate.getDay()];
                    var yearOnly = SessionDate.getFullYear();
                    $('.w-blog-list').append('<div class="w-blog-entry ' + Counterr + '" style="position:relative;">'
                                                        + '<div class="w-blog-entry-meta-date" style="left:90%;position:absolute;top:5%;right:5%">'
                                                                + '<span id="dayname' + Counterr + '" class="w-blog-entry-meta-date-day" style="font-family:' + 'GE SS Two Light' + ';font-size:18px;">' + DayName + '</span><span id="mounth' + Counterr + '" class="w-blog-entry-meta-date-month" style="font-family:' + 'GE SS Two Light' + ';">' + mounthOnly + '</span> <span id="day' + Counterr + '" class="w-blog-entry-meta-date-day">' + dayOnly + '</span> <span id="year' + Counterr + '" class="w-blog-entry-meta-date-year">' + yearOnly + '</span>'
                                                        + '</div>'
                                                        + '<div id="' + Custom.Doctors.ID + '" class="w-blog-entry-h ' + Counterr + '">'
                                                            + '<a class="w-blog-entry-link" href="javascript:GoToProfile(' + Custom.Doctors.ID + ')">'
                                                                + '<div class="w-blog-entry-preview">'
                                                                    + '<img src="' + Custom.Doctors.ProfileImageLink + '" alt="DoctorImg">'
                                                                + '</div>'
                                                                + '<h2 class="w-blog-entry-title" style="margin-bottom: 0px;">'
                                                                    + '<span class="w-blog-entry-title-h">' + Custom.Doctors.FirstName + ' ' + Custom.Doctors.LastName + '</span>'
                                                                    + '<span style="font-size:12px;color:#777"> ' + Custom.Doctors.Language.replace("_","/")+ '</span>'
                                                                + '</h2>'
                                                            + '</a>'
                                                            + '<div class="w-blog-entry-body">'
                                                                + '<div class="w-blog-entry-meta">'

                                                                + '</div>'
                                                                + '<div class="w-blog-entry-short" style="font-family:' + 'GE SS Two Light' + ';">'
                                                                    + SPSS
                                                                + '</div>'
                                                                + '<label id="Time' + Counterr + '"><strong style="font-family:'+'GE SS Two Light'+';">' + 'الوقت:</strong>' + Custom.Time + '</label>' + '&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp <strong style="font-family:'+'GE SS Two Light'+';">المدة:</strong> ' + '<label id="Duration' + Counterr + '">' + Custom.Duration + ' دقيقة' + '</label>'
                                                                + '<br /><label style="' + styleColor + ';font-family:' + 'GE SS Two Light' + ';" id="Type' + Counterr + '"><strong>' + '</strong>' + Custom.AvOrNot + '</label>'
                                                                + '<div class="w-blog-entry-short" style="float: right;">'
                                                                    + '<a class="w-blog-entry-link" style="font-family:' + 'GE SS Two Light' + ';" href="javascript:GoToProfile(' + Custom.Doctors.ID + ')">عرض الملف '
                                                                    + '</a> | '
                                                            + '<a class="w-blog-entry-link" style="' + styleDisplay + ';font-family:' + 'GE SS Two Light' + ';" href="javascript:Purchase(' + Custom.ID + ',' + Counterr + ');">حجز الجلسة '
                                                            + '</a>  '
                                                            + '<label><strong>  ' + Custom.Price + ' جم</strong></label>'
                                                                + '</div>'
                                                            + '</div>'
                                                        + '</div>'
                                                    + '</div>');
                    Counterr++;
                });
            },
            error: function (data) {
                console.log(data.responseText);
                alert(data.responseText);
            }
        });
    }
</script>



